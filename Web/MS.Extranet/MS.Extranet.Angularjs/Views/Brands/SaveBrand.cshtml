@{
    ViewBag.Title = "ModifyView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section ContentScripts
{
    <script src="~/js/SaveBrandController.js"></script>
}

<div class="col-lg-12">
    <div data-ng-app data-ng-controller="saveBrandController">
        
    <strong class="error">{{ error }}</strong>

        <form name="saveBrandForm" data-ng-show="brand" novalidate>
            @Html.Hidden("HdnBrandId", ViewData["IdBrand"] as int?, new { ng_model = "brand.IdBrand" })
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group" ng-class="{ 'has-error' : saveBrandForm.brandname.$invalid && !saveBrandForm.brandname.$pristine }">
                        <label>Nombre:</label>
                        <input class="form-control" name="brandname" type="text" data-ng-model="brand.Name" required />
                        <!--<p ng-show="saveUserForm.username.$invalid && !saveUserForm.username.$pristine" class="help-block">*</p>-->
                    </div>
                    <div class="form-group" ng-class="{ 'has-error' : saveBrandForm.storeStreet.$invalid && !saveBrandForm.storeStreet.$pristine }">
                        <label>Calle:</label>
                        <input class="form-control" name="storeStreet" type="text" data-ng-model="brand.Street" required />
                        <!--<p ng-show="saveUserForm.username.$invalid && !saveUserForm.username.$pristine" class="help-block">*</p>-->
                    </div>

                    <div class="form-group" ng-class="{ 'has-error' : saveBrandForm.storenumber.$invalid && !saveBrandForm.storenumber.$pristine }">
                        <label>Numero:</label>
                        <input class="form-control" name="storenumber" type="text" data-ng-model="brand.Number" required />
                        <!--<p ng-show="saveUserForm.username.$invalid && !saveUserForm.username.$pristine" class="help-block">*</p>-->
                    </div>

                    <div class="form-group" ng-class="{ 'has-error' : saveBrandForm.storepostalcode.$invalid && !saveBrandForm.storepostalcode.$pristine }">
                        <label>Código postal:</label>
                        <input class="form-control" name="storepostalcode" type="text" data-ng-model="brand.PostalCode" required />
                        <!--<p ng-show="saveUserForm.username.$invalid && !saveUserForm.username.$pristine" class="help-block">*</p>-->
                    </div>
                            
                    <div class="form-group" ng-class="{ 'has-error' : saveBrandForm.storeprefixphone.$invalid && !saveBrandForm.storeprefixphone.$pristine }">
                        <label>Prefijo:</label>
                        <input class="form-control" name="storeprefixphone" type="text" data-ng-model="brand.PrefixPhone" required />
                        <!--<p ng-show="saveUserForm.username.$invalid && !saveUserForm.username.$pristine" class="help-block">*</p>-->
                    </div>

                    <div class="form-group" ng-class="{ 'has-error' : saveBrandForm.storephone.$invalid && !saveBrandForm.storephone.$pristine }">
                        <label>Teléfono:</label>
                        <input class="form-control" name="storephone" type="text" data-ng-model="brand.Phone" required />
                        <!--<p ng-show="saveUserForm.username.$invalid && !saveUserForm.username.$pristine" class="help-block">*</p>-->
                    </div>

                    <div class="form-group" ng-class="{ 'has-error' : saveBrandForm.storedescriptiones.$invalid && !saveBrandForm.storedescriptiones.$pristine }">
                        <label>Descripción castellano:</label>
                        <input class="form-control" name="storedescriptiones" type="text" data-ng-model="brand.DescriptionES" required />
                        <!--<p ng-show="saveUserForm.username.$invalid && !saveUserForm.username.$pristine" class="help-block">*</p>-->
                    </div>

                    <div class="form-group" ng-class="{ 'has-error' : saveBrandForm.storedescriptionen.$invalid && !saveBrandForm.storedescriptionen.$pristine }">
                        <label>Descripción inglés:</label>
                        <input class="form-control" name="storedescriptionen" type="text" data-ng-model="brand.DescriptionEN" required />
                        <!--<p ng-show="saveUserForm.username.$invalid && !saveUserForm.username.$pristine" class="help-block">*</p>-->
                    </div>
                </div>
                <div class="col-lg-6">
                </div>
                <button type="submit" data-ng-click="save(saveBrandForm.$valid)" class="btn btn-default">Guardar</button>
            </div>
        </form>
    </div>
</div>

@section ContentScripts
{
    <script src="~/js/BrandListController.js"></script>
}

<div class="row">
    <div class="col-lg-12">
        <div data-ng-app data-ng-controller="brandListController" class="dataTable_wrapper">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th><a href="" ng-click="predicate = 'IdBrand'; reverse=!reverse">Id</a></th>
                        <th><a href="" ng-click="predicate = 'Name'; reverse=!reverse">Name</a></th>
                        <th><a href="" ng-click="predicate = 'Email'; reverse=!reverse">Email</a></th>
                        <th><a href="" ng-click="predicate = 'Phone'; reverse=!reverse">Phone</a></th>
                        <th><a href="" ng-click="predicate = 'IsPublished'; reverse=!reverse">IsPublished</a></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="odd gradeX" data-ng-repeat="brand in brands | orderBy:predicate:reverse">
                        <td>{{ brand.IdBrand }}</td>
                        <td>{{ brand.Name }}</td>
                        <td>{{ brand.Email }}</td>
                        <td>{{ brand.Phone }}</td>
                        <td>{{ brand.IsPublished }}</td>
                        <td>
                            <p><a href="/Brands/SaveBrand?BrandId={{ brand.IdBrand }}">Edit</a></p>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
    </div>
    <!-- /.col-lg-12 -->
</div>